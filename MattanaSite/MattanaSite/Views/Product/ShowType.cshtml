@model IEnumerable<MattanaSite.Models.ProductType>
@{
    ViewBag.Title = "ShowType";
}

<div class="portlet portlet-boxed">
    <div class="portlet-header">
        <h4 class="portlet-title">
            Phân loại sản phẩm
        </h4>
    </div> <!-- /.portlet-header -->
    <div class="portlet-body">
        <div class="row">

            <form method="post" action="/product/addtype" onsubmit="if(!confirm('Thêm loại sản phẩm ?')){return false;}">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Mã</label>
                        <input type="text" class="form-control" name="code" />
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control" name="name" />
                    </div>
                </div>
                <div class="col-sm-4">
                    <br />
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>

            <div class="col-sm-12">
                <br />
                <fieldset>
                    <table class="table table-striped table-bordered thumbnail-table">
                        <thead>
                            <tr>
                                <th>Mã loại</th>
                                <th>Tên</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td><a href="javascript:showmodify('@item.Id', '@item.Name')">Chỉnh sửa</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </fieldset>
            </div>

        </div>
    </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chỉnh sửa</h4>
            </div>
            <form method="post" action="/product/modifytype">
                <div class="modal-body">

                    <input type="hidden" name="Id" id="typeid" />
                    <input type="text" name="Name" id="nameid" class="form-control" />


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Chỉnh sửa</button>
                </div>
            </form>
        </div>

    </div>
</div>

@section scripts {

    <script>

        function showmodify(id, name) {
            $('#typeid').val(id);
            $('#nameid').val(name);

            $('#myModal').modal('show');
        }

    </script>
}