@model IEnumerable<MattanaSite.Models.MStaff>
@{
    ViewBag.Title = "Send";
}


<div class="portlet portlet-boxed">
    <div class="portlet-header">
        <h4 class="portlet-title">
            Gửi thông báo
        </h4>
    </div> <!-- /.portlet-header -->

    <div class="portlet-body">
        <div class="row">

            <form method="post" onsubmit="if(!confirm('Gửi thông báo?')){return false;}">
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>Nhân viên</label>
                        <select class="form-control selectpicker" data-live-search="true" name="user">
                            @foreach (var item in Model)
                            {
                                <option data-tokens="@item.Id @item.FullName" value="@item.MUser">@item.FullName - @item.Id</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Tiêu đề</label>
                        <input type="text" name="title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Nội dung</label>
                        <textarea name="messenge" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Gửi</button>
                </div>
            </form>

        </div>
    </div>
</div>




@section styles {
    <!-- bootstrap select-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/css/bootstrap-select.min.css">
}
@section scripts {
    <!-- bootstrap select js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/js/bootstrap-select.min.js"></script>
}